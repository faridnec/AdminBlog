@using Microsoft.AspNetCore.Mvc.Localization;
@model AdminBlog.Models.Author
@{
    ViewData["Title"] = "Login";
}
@if (TempData["Error"] is not null)
{
    <h5 style="color:red">@TempData["Error"]</h5>
}
@inject IViewLocalizer localizer;

<div class="row">
    <div class="col-md-6">
        <h1 class="display-4">@localizer["Welcome"]</h1>
        <form asp-action="Login" autocomplete="on">
            <div class="form-group floating-label-form-group controls">
                <input type="text" asp-for="Email" class="form-control" name="Email" placeholder="@localizer["Email"]">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group floating-label-form-group controls">
                <input type="password" asp-for="Password" class="form-control" name="Password" placeholder="@localizer["Password"]">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <button type="submit" class="btn btn-secondary">@localizer["Login"]</button>
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Register">@localizer["Register"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
